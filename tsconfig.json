{
  "compilerOptions": {
    "moduleResolution": "Node",
    "sourceMap": true,
    "module": "ES2022",
    "target": "ES6",
    "outDir": "./esm",
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "demo/**/*"
  ]
}